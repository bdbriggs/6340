<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Gallery – Dumpster Fire Coding</title>
  
  <!-- Performance optimizations -->
  <link rel="preconnect" href="https://cdn.jsdelivr.net" />
  <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Your custom CSS (served from Express static) -->
  <link rel="stylesheet" href="/css/style.css" />
  
  <!-- Performance-optimized styles -->
  <style>
    .gallery-img {
      will-change: transform;
      backface-visibility: hidden;
      transform: translateZ(0);
    }
    .gallery-img:hover {
      transform: scale(1.05) translateZ(0);
    }
  </style>
</head>
<body class="bg-dark text-light">

  <!-- Header / Navbar -->
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-secondary">
      <div class="container">
        <a class="navbar-brand" href="/">Dumpster Fire Coding</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"
          aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div id="nav" class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto align-items-lg-center">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/featured">Featured</a></li>
            <li class="nav-item"><a class="nav-link active" aria-current="page" href="/gallery">Gallery</a></li>
            <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
            <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>

            <!-- Connect Wallet button as a proper nav item -->
            <li class="nav-item ms-lg-3">
              <button id="connectWalletBtn"
                      type="button"
                      class="btn btn-success wallet-btn w-100 w-lg-auto">
                Connect Wallet
              </button>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Gallery -->
  <main class="py-5">
    <div class="container">
      <h1 class="display-4 mb-4 text-center fade-in">Gallery</h1>

      <% if (!photos || photos.length === 0) { %>
        <p class="lead text-center">No photos yet. Check back soon!</p>
      <% } else { %>
        <!-- Grid of "frames" (cards) -->
        <div class="row g-4 fade-in-delay-1">
          <% 
            // Function to get the page route for each image
            function getImagePageRoute(imageUrl) {
              if (imageUrl.includes('PopArtDumpsterFire.png')) return '/popart';
              if (imageUrl.includes('RedRectangles.png')) return '/redrectangles';
              if (imageUrl.includes('sakura.png')) return '/sakura';
              return null; // No dedicated page for this image
            }
          %>
          <% photos.forEach(p => { %>
            <% const pageRoute = getImagePageRoute(p.image_url); %>
            <div class="col-12 col-sm-6 col-lg-4">
              <div class="card h-100 bg-black text-light border-secondary">
                <% if (pageRoute) { %>
                  <a href="<%= pageRoute %>" class="text-decoration-none">
                    <div class="ratio ratio-4x3">
                      <img
                        src="<%= p.image_url %>"
                        class="card-img-top object-fit-cover gallery-img"
                        alt="<%= p.title %>"
                        loading="lazy"
                        decoding="async"
                        style="cursor: pointer; transition: transform 0.2s ease;"
                      />
                    </div>
                  </a>
                <% } else { %>
                  <div class="ratio ratio-4x3">
                    <img
                      src="<%= p.image_url %>"
                      class="card-img-top object-fit-cover gallery-img"
                      alt="<%= p.title %>"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                <% } %>
                <div class="card-body">
                  <% if (pageRoute) { %>
                    <a href="<%= pageRoute %>" class="text-decoration-none">
                      <h5 class="card-title mb-1 text-light"><%= p.title %></h5>
                    </a>
                  <% } else { %>
                    <h5 class="card-title mb-1"><%= p.title %></h5>
                  <% } %>
                  <% if (p.caption) { %>
                    <p class="card-text text-secondary mb-2"><%= p.caption %></p>
                  <% } %>
                  <% if (p.created_at) { %>
                    <small class="text-muted">
                      <%= new Date(p.created_at).toLocaleDateString() %>
                    </small>
                  <% } %>
                  <% if (pageRoute) { %>
                    <div class="mt-2">
                      <a href="<%= pageRoute %>" class="btn btn-sm btn-outline-primary">
                        View Details →
                      </a>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <!-- Optional: simple pagination controls if you pass page info -->
        <% if (typeof page !== 'undefined' && typeof totalPages !== 'undefined' && totalPages > 1) { %>
          <nav class="mt-4" aria-label="Gallery pages">
            <ul class="pagination justify-content-center">
              <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                <a class="page-link" href="/gallery?page=<%= page - 1 %>">Previous</a>
              </li>
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>">
                  <a class="page-link" href="/gallery?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>
              <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="/gallery?page=<%= page + 1 %>">Next</a>
              </li>
            </ul>
          </nav>
        <% } %>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="py-4 bg-black border-top border-secondary">
    <div class="container d-flex justify-content-between small">
      <span>© <span id="year"></span> Baily</span>
      <span>
        <a href="https://github.com/bdbriggs/6340" target="_blank" rel="noopener">GitHub</a> ·
        <a href="https://www.instagram.com/goforbaily/" target="_blank" rel="noopener">Instagram</a>
      </span>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

  <!-- Wallet integration -->
  <script src="/js/wallet.js" defer></script>

  <!-- Dynamic Year -->
  <script defer>
    document.getElementById("year").textContent = new Date().getFullYear();
  </script>
</body>
</html>
