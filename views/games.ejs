    .games-hero h1 {
      margin-bottom: 0.5rem;
    }

    .games-hero p {
      color: #adb5bd;
      max-width: 640px;
      margin: 0 auto 2rem;
    }

    .games-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.75rem;
      margin-bottom: 3rem;
    }

    .game-card {
      background-color: #050608;
      border-radius: 1rem;
      border: 1px solid #343a40;
      padding: 1.25rem;
      box-shadow: 0 18px 45px rgba(0, 0, 0, 0.55);
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .game-header {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      gap: 0.5rem;
    }

    .game-title {
      font-size: 1.1rem;
      font-weight: 600;
    }

    .game-tag {
      font-size: 0.75rem;
      padding: 0.1rem 0.6rem;
      border-radius: 999px;
      border: 1px solid #495057;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      color: #ced4da;
    }

    .game-description {
      font-size: 0.9rem;
      color: #adb5bd;
      min-height: 2.5em;
    }

    .game-placeholder {
      background: radial-gradient(circle at top, #111827, #020617);
      border-radius: 0.75rem;
      border: 1px dashed #495057;
      aspect-ratio: 16 / 9;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #6c757d;
      font-size: 0.85rem;
      text-align: center;
      padding: 0.75rem;
    }

    .game-meta {
      font-size: 0.75rem;
      color: #868e96;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
